<%if action_name=='edit'%>
<%url=album_path%>
<% else %>
<%url = albums_path%>
<%end%>


<%= form_with model:album, url:url do |form| %>

<div class="form-group form-control-lg">
    <%= form.label :album_name %><br>
    <%= form.text_field :album_name,:class =>"form-control" %>
    <% @album.errors.full_messages_for(:album_name).each do |message| %>
    <div class="alert-danger"><%=message%></div>
    <%end%>
  </div>

    <div class="form-group form-control-lg">
      <%= form.label :album_description%><br>
      <%= form.text_field :album_description,:class =>"form-control"%>
      <% @album.errors.full_messages_for(:album_description).each do |message| %>
          <div class="alert-danger">
            <%=message%>
        </div>
      <%end%>
    </div>

    <div class="form-group form-control-lg">
      <% @album.images.each do |image| %>
            <%if image.present?%>
              <%= image_tag(image)%>
            <%end%>
        <%end%>
    </div>

    <div>
    <%= form.label :images%><br>
    <%= form.file_field :images,accept: "images/*", multiple: true,direct_upload: true%>
     <% @album.errors.full_messages_for(:images).each do |message| %>
    <div class="alert-danger"><%=message%></div>
    <%end%>
  </div>
  <br>
  <div class="form-group">
    <%= form.submit :class =>"btn btn-primary"%>
  </div>
<% end %>
</div>